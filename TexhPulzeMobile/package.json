{
  "name": "texhpulzemobile",
  "version": "1.0.0",
  "main": "index.ts",
  "scripts": {
    "start": "expo start",
    "start:dev": "expo start --dev-client",
    "start:tunnel": "expo start --tunnel",
    "start:lan": "expo start --lan --port 8095",
    "setup:local": "node scripts/setup-local-dev.js",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "build:android": "eas build --platform android",
    "build:ios": "eas build --platform ios",
    "build:all": "eas build --platform all",
    "submit:android": "eas submit --platform android",
    "submit:ios": "eas submit --platform ios",
    "prebuild": "expo prebuild",
    "prebuild:clean": "expo prebuild --clean",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:mobile": "jest --testPathPattern=__tests__/ --verbose",
    "test:components": "jest --testPathPattern=components/__tests__/ --verbose",
    "test:snapshots": "jest --updateSnapshot",
    "lint": "echo 'Linting not configured' && exit 0"
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "^2.2.0",
    "@react-native-picker/picker": "^2.11.2",
    "@react-navigation/native": "^7.1.18",
    "@react-navigation/stack": "^7.4.10",
    "@tanstack/react-query": "^5.0.0",
    "axios": "^1.12.2",
    "expo": "^54.0.13",
    "expo-constants": "~16.0.0",
    "expo-secure-store": "~14.0.0",
    "expo-status-bar": "~3.0.8",
    "lru-cache": "^10.0.0",
    "react": "19.1.0",
    "react-native": "0.81.4",
    "react-native-gesture-handler": "^2.28.0",
    "react-native-reanimated": "^4.1.3",
    "react-native-safe-area-context": "^5.6.1",
    "react-native-screens": "^4.16.0",
    "react-native-toast-message": "^2.3.3",
    "expo-speech": "~11.9.0",
    "@segment/analytics-react-native": "^1.0.0",
    "@react-native-firebase/analytics": "^20.0.0",
    "react-native-mixpanel": "^1.3.0"
  },
  "devDependencies": {
    "@types/react": "~19.1.0",
    "@types/lru-cache": "^10.0.0",
    "typescript": "~5.9.2",
    "@testing-library/react-native": "^12.0.0",
    "@testing-library/jest-native": "^5.4.0",
    "jest": "^29.5.0",
    "jest-expo": "^52.0.0",
    "react-test-renderer": "19.1.0"
  },
  "jest": {
    "preset": "jest-expo",
    "transformIgnorePatterns": [
      "node_modules/(?!((jest-)?react-native|@react-native(-community)?)|expo(nent)?|@expo(nent)?/.*|@expo-google-fonts/.*|react-navigation|@react-navigation/.*|@unimodules/.*|unimodules|sentry-expo|native-base|react-native-svg)"
    ],
    "setupFilesAfterEnv": ["<rootDir>/jest.setup.js"],
    "testMatch": [
      "**/__tests__/**/*.test.(js|jsx|ts|tsx)"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/**/*.d.ts",
      "!src/**/*.stories.{js,jsx,ts,tsx}"
    ],
    "moduleNameMapping": {
      "^@/(.*)$": "<rootDir>/src/$1"
    }
  },
  "private": true
}
