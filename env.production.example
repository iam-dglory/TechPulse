# TechPulse Production Environment Variables

# Database Configuration
DB_HOST=your-production-db-host
DB_USER=techpulse_prod
DB_PASSWORD=your-secure-db-password
DB_NAME=techpulse_production
DB_ROOT_PASSWORD=your-root-password

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-here

# API Keys
NEWSAPI_KEY=your-newsapi-key
GUARDIAN_API_KEY=your-guardian-api-key
DEVTO_API_KEY=your-devto-api-key
HACKERNEWS_API_BASE_URL=https://hacker-news.firebaseio.com/v0

# Server Configuration
NODE_ENV=production
PORT=5000

# Redis Configuration
REDIS_URL=redis://your-redis-host:6379

# Monitoring
GRAFANA_PASSWORD=your-grafana-password

# SSL Configuration
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Mobile App Configuration
EXPO_PUBLIC_API_URL=https://api.techpulse.app
EXPO_PUBLIC_ENVIRONMENT=production

# Analytics
GOOGLE_ANALYTICS_ID=your-google-analytics-id
MIXPANEL_TOKEN=your-mixpanel-token

# Push Notifications
FCM_SERVER_KEY=your-fcm-server-key
APNS_KEY_ID=your-apns-key-id
APNS_TEAM_ID=your-apns-team-id
