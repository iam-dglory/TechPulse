# Tech News Aggregator Environment Configuration

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=password
DB_NAME=tech_news

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_change_this_in_production
JWT_EXPIRES_IN=24h

# News API Keys (Get these from respective services)
NEWS_API_KEY=your_news_api_key_here
GUARDIAN_API_KEY=your_guardian_api_key_here

# Server Configuration
NODE_ENV=development
PORT=5000

# CORS Configuration
FRONTEND_URL=http://localhost:3000

# Docker Configuration
DOCKER_COMPOSE_PROJECT_NAME=tech_news_aggregator

# SSL Configuration (for production)
SSL_CERT_PATH=./ssl/cert.pem
SSL_KEY_PATH=./ssl/key.pem

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# News Aggregation
NEWS_UPDATE_INTERVAL=7200000
MAX_ARTICLES_PER_SOURCE=50
CLEANUP_INTERVAL=86400000

# Mobile App Configuration
MOBILE_API_BASE_URL=https://your-domain.com/api
MOBILE_VERSION=1.0.0
