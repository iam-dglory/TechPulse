# TexhPulze Backend Environment Variables

# Server Configuration
NODE_ENV=development
PORT=5000
API_VERSION=v1

# MongoDB Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/texhpulze?retryWrites=true&w=majority
MONGODB_TEST_URI=mongodb://localhost:27017/texhpulze_test

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production
JWT_REFRESH_SECRET=your_refresh_token_secret_here
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# CORS Configuration
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,https://www.texhpulze.com,https://texhpulze.com

# Email Configuration (SendGrid/Mailgun)
EMAIL_SERVICE=sendgrid
EMAIL_FROM=noreply@texhpulze.com
EMAIL_FROM_NAME=TexhPulze
SENDGRID_API_KEY=your_sendgrid_api_key_here

# OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret

# News API Keys
NEWS_API_KEY=your_newsapi_key_here
GUARDIAN_API_KEY=your_guardian_api_key_here

# Redis Configuration (for caching and rate limiting)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your_session_secret_here

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_DIR=uploads

# Admin Configuration
ADMIN_EMAIL=admin@texhpulze.com
SUPPORT_EMAIL=support@texhpulze.com
